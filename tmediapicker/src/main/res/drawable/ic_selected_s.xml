<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="oval">
            <solid android:color="@color/tMediaPickerAudioCheckedBack" />
            <size
                android:width="@dimen/dp_20"
                android:height="@dimen/dp_20" />
        </shape>
    </item>
    <item
        android:bottom="@dimen/dp_8"
        android:left="@dimen/dp_4"
        android:right="@dimen/dp_10"
        android:top="@dimen/dp_10">
        <rotate
            android:fromDegrees="45"
            android:pivotX="45%"
            android:pivotY="45%"
            android:toDegrees="0">
            <shape>
                <solid android:color="@color/tMediaPickerAudioChecked" />
            </shape>
        </rotate>
    </item>
    <item
        android:bottom="@dimen/dp_8"
        android:left="@dimen/dp_7"
        android:right="@dimen/dp_3"
        android:top="@dimen/dp_10">
        <rotate
            android:fromDegrees="315"
            android:pivotX="45%"
            android:pivotY="45%"
            android:toDegrees="0">
            <shape>
                <solid android:color="@color/tMediaPickerAudioChecked" />
            </shape>
        </rotate>
    </item>
</layer-list>
