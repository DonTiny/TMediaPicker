<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_select_photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/select_photo" />

    <Button
        android:id="@+id/btn_select_video"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/select_video" />

    <Button
        android:id="@+id/btn_select_music"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/select_music" />

    <Button
        android:id="@+id/btn_select_photo_album"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/select_photo_album" />

    <Button
        android:id="@+id/btn_select_video_album"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/select_video_album" />
    <Button
        android:id="@+id/btn_select_audio_album"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/select_audio_album" />

    <TextView
        android:id="@+id/tv_data"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>